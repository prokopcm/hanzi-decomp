{
  "name": "hanzi-decomp",
  "version": "0.0.1",
  "description": "A tool that decomposes CJK characters into their components",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit && eslint --ext .ts ./src",
    "lint-fix": "tsc --noEmit && eslint --ext .ts ./src --quiet --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prokopcm/hanzi-decomp.git"
  },
  "keywords": [
    "hanzi",
    "decomp",
    "component",
    "cjk",
    "kanji",
    "radical",
    "hanja"
  ],
  "author": "Michael Prokopchuk",
  "license": "MIT",
  "files": ["lib/**/*"],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^12.0.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.1",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
